<tr>
  <td><%= show.title %></td>
  <td><%= image_tag show.banner, style: "height: 200px" if show.banner.attached? %></td>
  <td><%= show.season %></td>
  <td><%= show.season_start %></td>
  <td><%= show.season_end %></td>
  <td><%= link_to 'Show', show %></td>
  <td><%= link_to 'Edit', edit_show_path(show) %></td>
</tr>
