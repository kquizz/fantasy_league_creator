<%= form_with(model: show) do |form| %>
  <% if show.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(show.errors.count, "error") %> prohibited this show from being saved:</h2>
      <ul>
        <% show.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-field-div">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="form-field-div">
    <%= form.label :banner %>
    <%= form.file_field :banner %>
  </div>    

  <div class="form-field-div">
    <%= form.label :season %>
    <%= form.number_field :season %>
  </div>

  <div class="form-field-div">
    <%= form.label :season_start %>
    <%= form.date_field :season_start %>
  </div>

  <div class="form-field-div">
    <%= form.label :season_end %>
    <%= form.date_field :season_end %>
  </div>

  <div>
    <%= form.submit "Submit", class: "form-submit" %>
  </div>
<% end %>
