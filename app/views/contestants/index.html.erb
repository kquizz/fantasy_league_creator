<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h2 class="font-bold text-4xl">Contestants</h2>

<div id="contestants">
  <table class="w-full">
    <thead class="bg-gray-100">
      <tr>
        <th class="py-3 px-6 text-left">Name</th>
        <th class="py-3 px-6 text-left">Image</th>
        <th class="py-3 px-6 text-left">Birthdate</th>
        <th class="py-3 px-6 text-left">Arrival Date</th>
        <th class="py-3 px-6 text-left">Details</th>
        <th colspan="2"></th>
      </tr>
    </thead>
    <tbody class="text-gray-500 text-sm font-light">
      <% @contestants.each do |contestant| %>
        <%= render "contestant_row", contestant: contestant %>
      <% end %>
    </tbody>
  </table>
</div>


    <%= link_to "New contestant", new_contestant_path,  class: "new-link" %>
  </div>
</div>
