<h2>Contestants</h2>
<br/>

<div id="contestants">
  <table>
    <thead class="bg-gray-100">
      <tr>
        <th>Name</th>
        <th>Image</th>
        <th>Birthdate</th>
        <th>Arrival Date</th>
        <th>Details</th>
        <th colspan="2"></th>
      </tr>
    </thead>
    <tbody>
      <% @contestants.each do |contestant| %>
        <%= render "contestant_row", contestant: contestant %>
      <% end %>
    </tbody>
  </table>
</div>


<%= link_to "New contestant", new_contestant_path,  class: "new-link" %>
