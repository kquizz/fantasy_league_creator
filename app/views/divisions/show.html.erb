<%= render @division %>

<div class="contestant-container grid gap-4">
  <% @division.contestants.each do |contestant| %>
    <%= render "contestants/contestant_mini", contestant: contestant %>
  <% end %>
</div>

<div class="flex">
  <%= button_to "<< Back to divisions", divisions_path, method: :get, class: "back-btn" %>
  <%= button_to "Edit this division", edit_division_path(@division), method: :get, class: "edit-btn" %>
  <%= button_to "Destroy this division", division_path(@division), method: :delete, class: "destroy-btn" %>
</div>