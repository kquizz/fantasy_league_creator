<h2>Divisions</h2>
<br/>

<div id="divisions">
  <table>
    <thead class="bg-gray-100">
      <tr>
      <th>Name</th>
      <th colspan="2"></th>
    </tr>
    </thead>
    <tbody>
      <% @divisions.each do |division| %>
        <tr>
          <td><%= division.name%></td>
          <td><%= link_to "Show", division_path(division) %></td>
          <td><%= link_to "Edit", edit_division_path(division) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br/> <br/>
<%= link_to "New division", new_division_path, class: "new-link" %>
