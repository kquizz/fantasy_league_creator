<div class="flex flex-col items-start justify-center items-center border-2 overflow-hidden relative mx-auto rounded-lg inline-block">
  <div class="items-center">
    <%= link_to team.name, team_path(team) %>
  </div>
  <% if controller_name != "leagues" %>
    <div>
      <%= link_to team.league.name, league_path(team.league) %>
    </div>
  <% end %>
  <% if controller_name != "users" %>
    <div>
      <%= link_to team.owner.username, user_path(team.owner) %>
    </div>
  <% end %>
  <% if (contestant = team.contestants.detect{|c| c.image.present?}) %>
    <div>
      <%= image_tag contestant.image, style:"width: 200px" %>
    </div>
  <% end %>
</div>
