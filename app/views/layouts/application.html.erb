<!DOCTYPE html>
<html>
  <head>
    <title>Fantasy League Creator</title>
        <%= stylesheet_link_tag "wind", "inter-font", "data-turbo-track": "reload" %>
      <%= stylesheet_link_tag    "application" %>
      <%= javascript_include_tag "application" %>
      <%= csrf_meta_tags %>
    </head>
    <body>
      <div>
        <h1>Fantasy League Creator</h1>
      </div>
      <div id="nav" class="bg-gray-800 py-4">
        <% if current_user %>
          <%= link_to 'Events', events_path, class: 'nav-link' %> | 
          <%= link_to 'Contestants', contestants_path, class: 'nav-link' %> |
          <%= link_to 'Leagues', leagues_path, class: 'nav-link' %> |
          <%= link_to 'Rules', rules_path, class: 'nav-link' %> |
          <%= link_to 'Teams', teams_path, class: 'nav-link' %> |
          <%= link_to "Edit Profile", edit_user_path(current_user.id), class: 'nav-link' %> |
          <%= link_to "Logout", :logout, method: :post, class: 'nav-link' %>
        <% else %>
          <%= link_to "Register", new_user_path, class: 'nav-link' %> |
          <%= link_to "Login", :login, class: 'nav-link' %>
        <% end %>
      </div>
      <div>
        <% if flash[:notice].present?%>
          <p id="notice" class="bg-blue-500 text-white p-4 mb-4"><%= flash[:notice] %></p>
        <% end %>
        <% if flash[:alert].present?%>
          <p id="alert" class="bg-red-500 text-white p-4 mb-4"><%= flash[:alert] %></p>
        <% end %>
      </div>
      <%= yield %>
  </body>
</html>
<%= csrf_meta_tags %>